##
## extract lar from stereo recordings (check LAR really is channel 1)
##

LANG=C; export LANG

if [ $# = 0 ]
then
   echo "Extract EGG (LAR) signal from recordings"
   echo "Usage:  bin/get_lars recording/*.wav"
   echo "Extract track 1 (second track) from stereo recordings into lar/"
   exit 1
fi

if [ ! "$ESTDIR" ]
then
   echo "environment variable ESTDIR is unset"
   echo "set it to your local speech tools directory e.g."
   echo '   bash$ export ESTDIR=/home/awb/projects/speech_tools/'
   echo or
   echo '   csh% setenv ESTDIR /home/awb/projects/speech_tools/'
   exit 1
fi

for i in $*
do
   fname=`basename $i .wav`
   echo $fname
   $ESTDIR/bin/ch_wave -c 1 -F 16000 $i -otype riff -o lar/$fname.lar
done
